{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
      "php": "8.3",
      "wp": "6.6"
    },
    "phpExtensionBundles": [
      "kitchen-sink"
    ],
    "steps": [
      {
        "step": "importWordPressFiles",
        "wordPressFilesZip": {
          "resource": "url",
          "url": "https://raw.githubusercontent.com/3Pad/3pad-wordpress/main/public-folder.zip"
        }
      },
      
    {
      "step": "runPHP",
      "code": "<?php require '/wordpress/wp-load.php'; $user_id = wp_create_user('myuser', 'mypass', 'myuser@localhost'); (new WP_User($user_id))->set_role('subscriber');"
    },
    {
      "step": "login",
      "username": "myuser",
      "password": "mypass"
    },
      {
        "step": "runPHP",
        "code": "<?php\nheader('Location: /');\nexit();\n?>"
      }
    ]
  }
  